# VoyGent V3 Environment Variables
# Copy this to .env and fill in your actual API keys
# DO NOT commit .env to Git

# Amadeus API (flights and hotels)
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# Viator API (tours and activities)
VIATOR_API_KEY=your_viator_api_key_here

# Web Search API (choose one or both)
SERPER_API_KEY=your_serper_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# AI Providers (primary and fallback)
ZAI_API_KEY=your_zai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Admin Authentication (for /api/trips/:id/logs endpoint)
ADMIN_JWT_SECRET=your_secure_random_string_here

# Environment
NODE_ENV=development
