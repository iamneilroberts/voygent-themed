{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "option.v1",
  "type": "object",
  "properties": {
    "key": { "type": "string", "enum": ["A","B","C","D"] },
    "title": { "type": "string" },
    "whyOverall": { "type": "string" },
    "days": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "d": { "type": "integer" },
          "city": { "type": "string" },
          "am": { "type": "string" },
          "pm": { "type": "string" },
          "drive": { "type": "string" },
          "rail": { "type": "string" },
          "why": { "type": "string" }
        },
        "required": ["d","city","am","pm","why"]
      }
    },
    "splurges": { "type": "array", "items": { "type": "string" } },
    "assumptions": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["key","title","days"]
}
